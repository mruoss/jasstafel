{
	"name": "jasstafel",
	"version": "2.1.1",
	"description": "Jasstafel zum Schreiben von Jasspartien",
	"license": "MIT",
	"scripts": {
		"build": "webpack --mode production --env presets=serviceworker",
		"lint": "yarn run lint:js && yarn run lint:sass",
		"lint:js": "eslint src/js/",
		"lint:sass": "sass-lint -c .sass-lint.yml -v -q --max-warnings 0",
		"prettier": "prettier --write '**/*.js'",
		"start": "webpack serve --content-base public/ --open --mode development --hot",
		"start:sw": "webpack serve --content-base public/ --open --mode development --env presets=serviceworker",
		"test": "mocha --require babel-register ./tests/**/*.js"
	},
	"dependencies": {
		"@fortawesome/free-solid-svg-icons": "^5.15.3",
		"bluebird": "^3.5.1",
		"core-js": "3.13.1",
		"konva": "^8.0.2",
		"lodash": "^4.17.21",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-konva": "^17.0.2-4",
		"react-redux": "^7.2.4",
		"redux": "^4.1.0",
		"redux-undo": "^1.0.0-beta9-9-7",
		"reselect": "^4.0.0",
		"styled-components": "^4.4.1",
		"workbox-webpack-plugin": "^6.1.5"
	},
	"devDependencies": {
		"@babel/core": "^7.14.3",
		"@babel/plugin-proposal-object-rest-spread": "^7.14.4",
		"@babel/preset-env": "^7.14.2",
		"@babel/preset-react": "^7.13.13",
		"babel-eslint": "^10.0.3",
		"babel-loader": "^8.2.2",
		"babel-plugin-module-resolver": "^4.1.0",
		"babel-polyfill": "^6.26.0",
		"chai": "^4.3.4",
		"chai-match-pattern": "^1.1.0",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^9.0.0",
		"css-loader": "^5.2.6",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-import-resolver-babel-module": "^5.3.1",
		"eslint-plugin-babel": "^5.1.0",
		"eslint-plugin-css-modules": "^2.7.5",
		"eslint-plugin-fp": "^2.3.0",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-jasmine": "^4.1.2",
		"eslint-plugin-lodash-fp": "^2.2.0-a1",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-react": "^7.24.0",
		"html-webpack-plugin": "^5.3.1",
		"mini-css-extract-plugin": "^1.6.0",
		"mocha": "^8.4.0",
		"node-sass": "^6.0.0",
		"postcss-loader": "^3.0.0",
		"prettier": "^2.3.0",
		"prop-types": "^15.6.2",
		"sass-lint": "^1.13.1",
		"sass-loader": "^11.1.1",
		"style-loader": "^2.0.0",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0",
		"webpack-dev-server": "^3.11.2",
		"webpack-merge": "^5.7.3"
	}
}
