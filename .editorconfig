# http://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 3

[package.json]
indent_style = space
indent_size = 2

[*.{sass,scss,pug}]
indent_style = tab
indent_size = 3

[*.{yml,yaml}]
indent_style = space
indent_size = 2
